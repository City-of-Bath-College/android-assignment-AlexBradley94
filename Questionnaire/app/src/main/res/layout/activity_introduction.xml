<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bra11124543.questionnaire.IntroductionActivity"
    android:background="#B82E00">

    <ImageView
        android:id="@+id/img_Duck"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon"
        android:layout_marginTop="40sp"
        />

    <TextView
        android:id="@+id/txt_Greeting"
        android:text="Welcome to the house of fun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/img_Duck"
        android:gravity="center"
        android:textColor="#fefefe"
        />

    <Button
        android:id="@+id/btn_Play"
        android:text="Play!"
        android:layout_width="170sp"
        android:layout_height="60sp"
        android:layout_below="@+id/txt_Greeting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:background="#CB6745"
        android:textColor="#fefefe"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/btn_Highscore"
        android:text="Highscores!"
        android:layout_width="170sp"
        android:layout_height="60sp"
        android:layout_below="@+id/btn_Play"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:background="#CB6745"
        android:textColor="#fefefe"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/btn_About"
        android:text="About!"
        android:layout_width="170sp"
        android:layout_height="60sp"
        android:layout_below="@+id/btn_Highscore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:background="#CB6745"
        android:textColor="#fefefe"
        android:textSize="20sp"
        />

</RelativeLayout>
